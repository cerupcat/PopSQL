if (posts_array[1])
	each post in posts_array
		- var postID = post._id 
		- var spriteID = post.spriteID
		- var post_date = post.date.toISOString()
		- var post_content = post.post
		- var tags = post.tags
		- var adds = post.adds
		div.post(data-postID= postID)
			div.sprite
				img(src= spriteID)
			div.body
				h1 Guest &nbsp;
				h2 @guest
				abbr.timeago(title= post_date)
				p #{post_content}
				h3
					if (tags[0])
						span#tags Tags: 
							each tag in tags
								a #{tag}, 
					if (adds[0])
						span#adds Addresses: 
							each add in adds
								a #{add}, 
