div.post(data-postID= postID)
	div.sprite
		img(src= spriteID)
	div.body
		h1 Guest &nbsp;
		h2 @guest
		abbr.timeago(title= post_date)
		p #{post_content}
		h3
			if (tags[0])
				span#tags Tags: 
					each tag in tags
						a #{tag}, 
			if (adds[0])
				span#adds Addresses: 
					each add in adds
						a #{add}, 
